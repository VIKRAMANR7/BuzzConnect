# PORT the server listens on
PORT=5000

# Database. If you use MongoDB, set MONGO_URI.
MONGODB_URI=mongodb+srv://<dbuser>:<dbpass>@cluster0.mongodb.net/buzzconnect?retryWrites=true&w=majority

# Clerk server-side secret key (if you verify Clerk tokens on backend)
CLERK_SECRET_KEY=sk_test_xxxReplaceMe

CLERK_PUBLISHABLE_KEY=pk_test_xxx

# CORS: front-end origin(s) allowed to call your API
FRONTEND_URL=http://localhost:5173

# File upload / image hosting
# ImageKit example
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id/
# SMTP / Email (optional)

SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass
SENDER_EMAIL="no-reply@yourdomain.com"

INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

