{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "Node16",
    "moduleResolution": "Node16",

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node", "express"],
    "typeRoots": ["./src/types", "./node_modules/@types"],

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
